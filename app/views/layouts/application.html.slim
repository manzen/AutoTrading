    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  .nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
    .container
      h3.navbar-brand AutoTradingApp
      ul.navbar-nav
        li.nav-item
          = link_to 'Tickers', root_path, class: 'nav-link'
        li.nav-item
          = link_to 'Orders', orders_path, class: 'nav-link'
        li.nav-item
          = link_to 'BuySetting', buy_settings_path, class: 'nav-link'
        li.nav-item
          = link_to 'SellSetting', sell_settings_path, class: 'nav-link'
